---
import GithubLogo from "@/components/GithubLogo.astro";
import EmailLogo from "@/components/EmailLogo.astro";
import LinkedinLogo from "@/components/LinkedinLogo.astro";
---

<header class="sticky top-0 z-50">
  <!-- sticky top-0 z-40 w-full backdrop-blur flex-none transition-colors duration-500 lg:z-50 lg:border-b lg:border-slate-900/10 dark:border-slate-50/[0.06] bg-white supports-backdrop-blur:bg-white/95 dark:bg-slate-900/75" -->
  <nav
    id="navbar"
    class="flex justify-between px-5 md:px-10 py-5 items-center backdrop-blur-sm border-slate-50/[0.06] transition-colors duration-500 border-b bg-secondary"
  >
    <div id="brand" class="text-primary font-display text-2xl">
      Â¡Hola! <br />
      Soy LEANDRO GUTIERREZ
    </div>

    <div id="nav-links" class="w-auto gap-4 text-primary flex">
      <a href="mailto:leandrogutierrez070@gmail.com" class="w-6">
        <EmailLogo
          class="w-6 text-primary hover:scale-125 transition inline-block"
        />
      </a>
      <a
        href="https://www.linkedin.com/in/leandro070/"
        target="_blank"
        rel="noopener noreferrer"
        class="w-6"
      >
        <LinkedinLogo
          class="w-6 text-primary hover:scale-125 transition inline-block"
        />
      </a>
      <a
        href="https://github.com/leandro070"
        target="_blank"
        rel="noopener noreferrer"
        class="w-6"
      >
        <GithubLogo
          class="w-6 text-primary hover:scale-125 transition inline-block"
        />
      </a>
    </div>
  </nav>
</header>

<script>
  import { gsap } from "gsap";

  const toggleButton = document.getElementById("nav-toggle");
  const navLinks = document.getElementById("nav-links");

  toggleButton?.addEventListener("click", () => {
    console.log("CLIKCING");

    navLinks?.classList.toggle("hidden");
  });

  const $header = document.querySelector("header");
  if ($header) {
    const headerDimensions = $header.getBoundingClientRect();

    gsap.fromTo(
      "#navbar",
      {
        y: -headerDimensions.height,
        opacity: 0,
      },
      {
        duration: 1.5,
        ease: "power1.out",
        delay: 0.2,
        y: 0,
        opacity: 1,
      }
    );
  }
</script>
